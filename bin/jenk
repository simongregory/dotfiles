#!/usr/bin/env ruby

def info
  `git config --get remote.origin.url`
end

def is_branch
  `git rev-parse --abbrev-ref HEAD`.chomp != 'master'
end

base_url = 'https://ci.iplayer.tools.bbc.co.uk/'
jenkins_build = ''

repo = info.split('/').pop.chomp.sub('.git', '');
jenkins_build = repo if repo
jenkins_build = 'downloads-pc-app-tests' if repo === 'ipd'
jenkins_build = 'downloads-app' if repo === 'ipd-hq'
jenkins_build = 'downloads-mpegdash-downloader' if repo === 'mash'
jenkins_build = 'downloads-mediaselector-client-js' if repo === 'mediaselector-client-js'
pull_requests = is_branch ? "-pull-requests" : ""

unless jenkins_build.empty?
  url = "#{base_url}/job/#{jenkins_build}#{pull_requests}"
else
  url = "#{base_url}/"
end

`open #{url}`
