#!/usr/bin/env ruby

def info
  `git info`
end

base_url = 'https://jenkins.iplayer.tools.bbc.co.uk'
jenkins_build = ''

if info =~ /^origin.*\/([\w-]+)\.git/
  if $1.include? 'ipd-hq'
    jenkins_build = 'ipd-hq'
  end
end

unless jenkins_build.empty?
  url = "#{base_url}/job/#{jenkins_build}"
else
  url = "#{base_url}/"
end

`open #{url}`
