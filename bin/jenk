#!/usr/bin/env ruby

def info
  `git config --get remote.origin.url`
end

base_url = 'https://jenkins.iplayer.tools.bbc.co.uk'
jenkins_build = ''

repo = info.split('/').pop;
jenkins_build = repo if repo

unless jenkins_build.empty?
  url = "#{base_url}/job/#{jenkins_build}"
else
  url = "#{base_url}/"
end

`open #{url}`
