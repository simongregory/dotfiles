#!/usr/bin/env ruby

def info
  `git info`
end

cosmos_component = ''

if info =~ /^origin.*\/([\w-]+)\.git/
  if $1.include? 'ipd-hq'
    cosmos_component = 'ipd-hq'
  end
end

unless cosmos_component.empty?
  url = "https://admin.live.bbc.co.uk/cosmos/component/#{cosmos_component}"
else
  url = 'https://admin.live.bbc.co.uk/cosmos/project/iplayer'
end

`open #{url}`

